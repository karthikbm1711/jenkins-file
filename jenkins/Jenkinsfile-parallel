pipeline {
     agent any
	   parameters { 
	        choice(name: 'STAGE', choices: [ 'main','master' ] , description: 'to test parallel stage')
	    }
       stages {
          
          stage('TESTING') {
            parallel {
			  steps { 
			      script {
				     if(param.STAGE == 'master')
				    }
                   stage('TESTING1') {
                      steps {
				      
                           sh 'echo "This is a TESTING1 stage"'
                          sh 'sleep 3'
						}
                    
                    }
						stage('TESTING2') {
                     
                            steps {
					
                              sh '''
                                 echo "This is a TESTING2 stage"
                                  sleep 3
                               '''
						    }
                        }
                }
           }     
        }   
    }
