def a_result = "true"

pipeline {
    agent any
    stages {
        stage('A') {
            steps {
                script { 
					    echo "Default Result "
					    echo a_result
						echo "Executing A"
						a_result = "true"
						
					}
				}
				}
        stage('B') {
            steps {
               script { 
			      if ( a_result == "true" ) {
				  echo "Executing B"
						}
					}
                
            }
        }
        stage('C') {
            steps {
               
                    script { 
						if ( a_result != "true" ) {
						    echo "Executing C"
						  
						  }
						  else {
							  error("this is failed")
							
						}
						}
					}
                
            }
        }
    }
