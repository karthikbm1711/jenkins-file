pipeline {
    agent any

    stages {
        stage('A') {
            steps {
                
					script { 
					    echo "This is A stage"
					    
						error("Build failed because of this and that")
						BUILD_COMPLETE = "true"
					}
            }
        }
        stage('B') {
            steps {
                
                    script { 
					post {
                     success {
                        echo " THIS IS STAGE B"
                      }
                    }
						
							
						}
                }
            }
        
        stage('C') {
            steps {
                
                    script { 
					post {
                    failure {
                        echo "THIS IS STAGE C"
                           }
                           }
						
							
						}
					}
            }
        }
    }
