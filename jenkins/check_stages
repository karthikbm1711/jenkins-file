pipeline {
    agent any

    stages {
        stage('A') {
            steps {
                
					script { 
					    echo "This is A stage"
					    
						
						BUILD_COMPLETE = "true"
					}
				
            }
        }
        stage('B') {
            steps {
                
                    script { 
						while ( BUILD_COMPLETE == "true" ) 
							echo " THIS IS STAGE B"
							exit 0
						}
					
                }
            }
        
        stage('C') {
            steps {
                
                    script { 
						while ( BUILD_COMPLETE != "true" ) 
							echo "THIS IS STAGE C"
						}
					}
                
            }
        }
    }
